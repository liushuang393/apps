{
  "name": "simultaneous-interpretation",
  "version": "2.0.0",
  "description": "同時通訳 (Simultaneous Interpretation) - AI駆動のリアルタイム音声翻訳システム",
  "main": "dist/electron/main.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "clean": "rimraf dist coverage",
    "dev": "concurrently \"npm run build -- --watch\" \"wait-on dist/electron/main.js && cross-env NODE_ENV=development electron .\"",
    "start": "npm run electron:dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "lint:electron": "eslint \"electron/**/*.ts\"",
    "lint:electron:fix": "eslint \"electron/**/*.ts\" --fix",
    "lint:all": "eslint \"src/**/*.ts\" \"electron/**/*.ts\"",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"electron/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"electron/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "build:core": "tsc",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:extension": "tsc -p browser-extension/tsconfig.json",
    "build:all": "npm run build:core && npm run build:electron && npm run build:extension",
    "electron": "npm run build:electron && npm run electron:run",
    "electron:run": "chcp 65001 >nul 2>&1 && electron .",
    "electron:dev": "chcp 65001 >nul 2>&1 && cross-env NODE_ENV=development npm run electron",
    "pack": "npm run build:electron && electron-builder --dir",
    "dist": "npm run build:electron && electron-builder",
    "dist:win": "npm run build:electron && electron-builder --win",
    "dist:mac": "npm run build:electron && electron-builder --mac",
    "dist:linux": "npm run build:electron && electron-builder --linux",
    "quality": "npm run type-check && npm run lint && npm run format:check"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/chrome": "^0.1.18",
    "@types/electron": "^1.4.38",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.6.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.voicetranslate.pro",
    "productName": "VoiceTranslate Pro",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "teams-realtime-translator.html",
      "voicetranslate-pro.js",
      "icons/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icons/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icons/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
